{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./out",
        "lib": ["es6"],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "out"]
}